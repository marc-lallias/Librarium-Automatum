# ─── Shared environment variables ───────────────────────────────────────────
NODE_ENV=production

# Ollama connection (container-to-container via Docker network)
OLLAMA_API_BASE_URL=http://ollama:11434

# AnythingLLM storage (inside the container; backed by named volume)
STORAGE_DIR=/app/server/storage

# Host port overrides (change here instead of in docker-compose.yml)
OLLAMA_PORT=11434
ALLM_PORT=3001
